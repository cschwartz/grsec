    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run CLI",
            "type": "Ruby",
            "request": "launch",
            "program": "${workspaceRoot}/bin/grsec",
            "useBundler": true,
            "args": ["-v"]
        },
        {
            "name": "RSpec - all",
            "type": "Ruby",
            "request": "launch",
            "program": "${workspaceRoot}/bin/rspec",
            "useBundler": true,
            "args": [
                "-I",
                "${workspaceRoot}"
            ]
        },
        {
            "name": "RSpec - active spec file only",
            "type": "Ruby",
            "request": "launch",
            "program": "${workspaceRoot}/bin/rspec",
            "args": [
                "-I",
                "${workspaceRoot}",
                "${file}"
            ]
        }
    ]
}